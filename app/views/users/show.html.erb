<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
    <% if @logged_in_user %>
      <h3>Pending Friend Requests:</h3>
      <ul class="posts">
        <%= render 'friendship_requests/pending_friend_requests' %>
      </ul>
    <% end %>
    <% if @add_friend %>
      <%= button_to "Add Friend", user_friendship_requests_path(@user.id), class:"btn add-friend btn-secondary", type:"submit", method: :post %>
    <% elsif @pending_friend %>
      <%= button_to "Accept", user_friendship_request_path(@user.id), :method => :patch, class:"btn add-friend btn-secondary", type:"submit" %>
    <% end %>
  </section>
